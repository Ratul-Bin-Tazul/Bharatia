<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    tools:context="bharatia.com.bharatia.Fragments.AccountFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/accountUserPic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="5dp"
            android:elevation="2dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/accountUserPicImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_account_grey600_36dp"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/accountUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_username"
            android:textSize="20sp"
            android:layout_below="@+id/accountUserPic"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimaryGreen"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>



        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--&gt;-->
        <!--<TextView-->

            <!--android:layout_width="match_parent"-->
