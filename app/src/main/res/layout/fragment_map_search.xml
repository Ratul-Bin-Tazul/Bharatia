<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_map_search"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mapFragment"
    android:name="com.google.android.gms.maps.SupportMapFragment">

</FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/placePickerCardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/placeSearchImg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/search_green"
            android:padding="10dp"
            android:backgroundTint="@color/colorPrimaryGreen"
            android:backgroundTintMode="src_over"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/searchPlaceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/placeSearchImg"
                android:layout_centerVertical="true"
                android:text="@string/map_search_place_text"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryGreen"/>
        </RelativeLayout>
    <!--<fragment-->
        <!--android:id="@+id/place_autoCompleteFragment"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment" />-->

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp">
    <Button
        android:id="@+id/filterSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map_search_filter"
        android:background="@drawable/rounded_rectangle_green"
        android:textColor="#fff"
        android:elevation="2dp"
        android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

</RelativeLayout>